@model SoftwareControle.Models.Ferramenta

@{
    ViewData["Title"] = "Adicionar Ferramenta";
}

<h2>Adicionar Ferramenta</h2>

<form asp-action="Adicionar" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" asp-for="Nome">
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <input type="text" class="form-control" asp-for="Descricao">
    </div>
    

    <div class="form-group">
        <label for="Imagem">Imagem:</label>
        <input type="file" class="form-control" asp-for="Imagem">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

<a asp-action="Index">Voltar para a lista</a>
