@model SoftwareControle.Models.CriarOrdem

<h2>Adicionar Nova Ordem</h2>

<form asp-action="Adicionar" method="post">
    <div class="form-group">
        <label asp-for="FerramentaId" class="control-label"></label>
        <input asp-for="FerramentaId" class="form-control" />
        <span asp-validation-for="FerramentaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataCriacao" class="control-label"></label>
        <input asp-for="DataCriacao" class="form-control" />
        <span asp-validation-for="DataCriacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrazoMaximo" class="control-label"></label>
        <input asp-for="PrazoMaximo" class="form-control" />
        <span asp-validation-for="PrazoMaximo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NivelUrgencia" class="control-label"></label>
        <input asp-for="NivelUrgencia" class="form-control" />
        <span asp-validation-for="NivelUrgencia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar Ordem</button>
</form>
